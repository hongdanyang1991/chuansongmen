<resources>

    <!-- Base application theme. -->

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="DrawerView">
        <item name="android:layout_width">match_parent</item>
        <item name ="android:layout_height">@dimen/navigation_drawer_item_height</item>

        <item name="android:background">@drawable/drawer_item_background</item>
    </style>
    <style name="DrawerIcon">
        <item name="android:layout_width">24dp</item>
        <item name ="android:layout_height">24dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="DrawerTextView">
        <item name="android:layout_width">match_parent</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:textColor">@drawable/drawer_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyToolbarTextStyle" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TransparentActivity" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AboutToolbarTextStyle" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>


</resources>
